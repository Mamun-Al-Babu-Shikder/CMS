                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Share Study Plan"
                            android:textColor="#7f8183"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#7f8183"
                            android:textStyle="normal"
                            android:textSize="12sp"
                            android:text="You can share your study plan with your students via post. You can also share Image file and any kind of web address link."
                            />




                    </LinearLayout>

                </LinearLayout>



                <LinearLayout
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@drawable/cir_shp_alpha2"
