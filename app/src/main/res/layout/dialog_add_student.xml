<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">


    <LinearLayout
        android:paddingTop="20dp"
        android:paddingBottom="0dp"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_shp2"
        android:orientation="vertical"
        android:gravity="center"
        >



        <RelativeLayout
            android:layout_marginTop="6dp"
            android:layout_width="90dp"
            android:layout_height="90dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/cir_shp_white3"
                >


                <ImageView
                    android:layout_margin="23dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_choose_photo"
                    />


            </LinearLayout>


            <net.karthikraj.shapesimage.ShapesImage
                android:id="@+id/sImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:shape="circle"
                android:scaleType="centerCrop"
                />

        </RelativeLayout>


        <EditText
            android:id="@+id/sId"
            android:layout_marginTop="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/round_shp1"
            android:hint="ID"
            android:inputType="number"
            android:textSize="13sp"

            />


        <EditText
            android:id="@+id/sName"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/round_shp1"
            android:hint="Name"
            android:inputType="textPersonName"
            android:textSize="13sp"

            />



        <RadioGroup
            android:id="@+id/sSex"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <RadioButton
                android:id="@+id/male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textColor="#616161"
                android:textSize="13sp"
                android:background="#ffffff"
                />

            <RadioButton
                android:id="@+id/female"
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:background="#ffffff"
                android:textColor="#616161"
                android:textSize="13sp"
                />

            <RadioButton
                android:id="@+id/others"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Others"
                android:background="#ffffff"
                android:textColor="#616161"
                android:textSize="13sp"
                />


        </RadioGroup>


        <EditText
            android:id="@+id/sPhone"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/round_shp1"
            android:hint="Phone"
            android:textSize="13sp"
            android:inputType="phone"
            />

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:background="#dfdddd"
            android:layout_height="1px"/>



        <LinearLayout
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            >


            <Button
                android:id="@+id/cancleBtn"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Cancel"
                android:textSize="14sp"
                android:textColor="#ef1321"
                android:background="@drawable/left_btn_shp"
                />

            <LinearLayout
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#dfdddd"
                />

            <Button
                android:id="@+id/doneBtn"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Save"
                android:textSize="14sp"
                android:textColor="#08b931"
                android:background="@drawable/right_btn_shp"
                />


        </LinearLayout>




    </LinearLayout>


</LinearLayout>