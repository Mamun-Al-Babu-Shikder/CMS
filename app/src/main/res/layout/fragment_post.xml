<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#eee">


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/colorPrimary"
        >

        <Button
            android:layout_marginLeft="10dp"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:background="@drawable/mnu_btn"
            android:onClick="optionMenuBtn"
            />

        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post"
            android:textColor="#ffffff"
            android:textSize="17dp"
            android:textStyle="bold"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">




        <LinearLayout
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_shp2"
            android:elevation="1dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            >

            <LinearLayout
                android:paddingLeft="5dp"
                android:paddingRight="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/cbNormalText"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Normal Text"
                    android:textSize="12sp"
                    android:textColor="#5c5b5b"
                    android:checked="true"
                    />


                <CheckBox
                    android:id="@+id/cbBoldText"
                    android:checked="true"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Text over Background"
                    android:textSize="12sp"
                    android:textColor="#5c5b5b"
                    />

                <CheckBox
                    android:id="@+id/cbLink"
                    android:visibility="visible"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Link"
                    android:textSize="12sp"
                    android:textColor="#5c5b5b"
                    android:checked="true"
                    />


            </LinearLayout>


            <LinearLayout
                android:paddingLeft="5dp"
                android:paddingRight="0dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/cbImage"
                    android:visibility="visible"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Image"
                    android:textSize="12sp"
                    android:textColor="#5c5b5b"
                    android:checked="true"
                    />



                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    >

                    <Button
                        android:id="@+id/postBtn"
                        android:layout_marginRight="07dp"
                        android:layout_gravity="right"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:text="POST"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:background="@drawable/post_btn"
                        android:textColor="#ffffff"
                        />


                </LinearLayout>


            </LinearLayout>




        </LinearLayout>



                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#eee"
                    >


                    <LinearLayout
                        android:layout_margin="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_shp2"
                        android:orientation="vertical"
                        android:elevation="1dp"
                        >


                        <LinearLayout
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:gravity="center_vertical"
                            >




                            <net.karthikraj.shapesimage.ShapesImage
                                android:id="@+id/poster_img"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                app:shape="circle"
                                android:scaleType="centerCrop"
                                android:src="@drawable/default_user"
                                />


                            <LinearLayout
                                android:layout_marginLeft="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                >


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical"
                                    >

                                    <TextView
                                        android:id="@+id/poster_name"
                                        android:layout_width="260dp"
                                        android:layout_height="wrap_content"
                                        android:text="Poster Name"
                                        android:maxLines="1"
                                        android:ellipsize="end"
                                        android:textStyle="bold"
                                        />

                                    <TextView
                                        android:id="@+id/post_time"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Post Date and Time (Poster)"
                                        android:textSize="11sp"
                                        />


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical"
                                    >

                                    <Button
                                        android:id="@+id/menuBtn"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_gravity="right"
                                        android:background="@drawable/menu1"
                                        />


                                </LinearLayout>


                            </LinearLayout>



                        </LinearLayout>


                        <!--  Changeable Layout -->


                        <LinearLayout
                            android:visibility="visible"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >


                            <EditText
                                android:id="@+id/post_stext"
                                android:visibility="visible"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:paddingBottom="5dp"
                                android:paddingTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:background="@drawable/round_shp2"
                                android:hint="Post normal text."
                               />


                            <RelativeLayout
                                android:layout_marginTop="7dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:background="@color/colorPrimary"
                                >



                                <ImageView
                                    android:id="@+id/post_img"
                                    android:visibility="visible"
                                    android:layout_marginLeft="0dp"
                                    android:layout_marginRight="0dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="250dp"
                                    android:src="@drawable/img_chooser"
                                    android:scaleType="centerCrop"
                                    />


                                <EditText
                                    android:id="@+id/post_btext"
                                    android:visibility="visible"
                                    android:padding="15dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="250dp"
                                    android:gravity="center"
                                    android:textColor="#ffffff"
                                    android:background="#4e000000"
                                    android:textStyle="bold"
                                    android:textSize="22sp"
                                    android:hint="Post Text."
                                    android:textColorHint="#ffffff"
                                    android:maxLines="7"
                                    android:ellipsize="end"
                                    />



                            </RelativeLayout>




                            <EditText
                                android:id="@+id/post_link"
                                android:visibility="visible"
                                android:layout_marginTop="7dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="25dp"
                                android:background="@drawable/round_shp7"
                                android:gravity="center_vertical"
                                android:inputType="textUri"
                                android:ellipsize="end"
                                android:textSize="11sp"
                                android:textStyle="normal"
                                android:textColor="#4E64D8"
                                android:enabled="true"
                                android:hint="Enter link or website address..."
                                />




                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            >

                            <TextView
                                android:id="@+id/post_like"
                                android:layout_marginLeft="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 Like"
                                android:textSize="10sp"
                                />

                            <TextView
                                android:id="@+id/post_comment"
                                android:layout_marginLeft="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 Comments"
                                android:textSize="10sp"
                                />

                            <TextView
                                android:id="@+id/post_dislike"
                                android:layout_marginLeft="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 Dislike"
                                android:textSize="10sp"
                                />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="#cdcdcd"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            >


                            <LinearLayout
                                android:id="@+id/like_btn"
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                >

                                <ImageView
                                    android:id="@+id/like_icon"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:src="@drawable/ic_like"
                                    />

                                <TextView
                                    android:layout_marginLeft="7dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Like"
                                    android:textSize="12sp"
                                    />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="#cdcdcd"/>

                            <LinearLayout
                                android:id="@+id/comment_btn"
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                >

                                <ImageView
                                    android:id="@+id/comment_icon"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:src="@drawable/ic_comment"
                                    />

                                <TextView
                                    android:layout_marginLeft="7dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Comment"
                                    android:textSize="12sp"
                                    />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="#cdcdcd"/>

                            <LinearLayout
                                android:id="@+id/dislike_btn"
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                >

                                <ImageView
                                    android:id="@+id/dislike_icon"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:src="@drawable/ic_dislike"
                                    />

                                <TextView
                                    android:layout_marginLeft="7dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Dislike"
                                    android:textSize="12sp"
                                    />


                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

           </ScrollView>

        </LinearLayout>

</LinearLayout>
