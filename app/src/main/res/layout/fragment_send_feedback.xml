<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mcubes.aamamun.classmanagementsystem.SendFeedback"
    android:background="#ffffff"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/colorPrimary"
        >

        <Button
            android:layout_marginLeft="10dp"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:background="@drawable/mnu_btn"
            android:onClick="optionMenuBtn"
            />

        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send Feedback"
            android:textColor="#ffffff"
            android:textSize="17dp"
            android:textStyle="bold"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >


        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Write your comment about our app and send it to us. Your valuable comment helps us to create better application.  "
            />


        <EditText
            android:id="@+id/title"
            android:paddingLeft="12dp"
            android:paddingRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/round_shp1"
            android:gravity="center_vertical"
            android:hint="Title"
            android:textSize="14sp"
            android:inputType="textPersonName"
            />

        <EditText
            android:id="@+id/comment"
            android:paddingTop="10dp"
            android:paddingBottom="2dp"
            android:paddingLeft="12dp"
            android:paddingRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@drawable/round_shp1"
            android:gravity="start"
            android:hint="Write Comment..."
            android:textSize="14sp"
            />


        <LinearLayout

            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            >

            <Button
                android:id="@+id/sendBtn"
                android:layout_marginRight="35dp"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:background="@drawable/login_btn"
                android:text="SEND"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:textStyle="bold"
                />



        </LinearLayout>


    </LinearLayout>




</LinearLayout>
