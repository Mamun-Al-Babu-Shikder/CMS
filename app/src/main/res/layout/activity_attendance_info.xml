<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_attendance_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mcubes.aamamun.classmanagementsystem.AttendanceInfo"
    >


    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/round_shp5"
        android:elevation="3dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"

            >

           <RelativeLayout
               android:layout_margin="10dp"
               android:layout_width="60dp"
               android:layout_height="60dp"
               android:background="@drawable/cir_shp_white3"
               >

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:gravity="center">

                   <net.karthikraj.shapesimage.ShapesImage
                       android:layout_margin="10dp"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:src="@drawable/user"
                       app:shape="circle"
                       android:scaleType="centerCrop"/>


               </LinearLayout>

               <net.karthikraj.shapesimage.ShapesImage
                   android:id="@+id/sImg"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   app:shape="circle"
                   android:scaleType="centerCrop"
                   />


           </RelativeLayout>


        </LinearLayout>



        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#cdcdcd"
            />

        <LinearLayout
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            >


            <TextView
                android:id="@+id/sId"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ID : student_id"
                android:textStyle="normal"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/sName"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name : student_name"
                android:textStyle="normal"
                android:textSize="13sp"
                android:maxLines="2"
                android:ellipsize="end"
                />

            <TextView
                android:id="@+id/sSex"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender : sex"
                android:textStyle="normal"
                android:textSize="13sp"
                />

            <TextView
                android:id="@+id/sPhone"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Call : phone_number"
                android:textStyle="normal"
                android:textSize="13sp"
                android:maxLines="1"
                android:ellipsize="end"
                />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#7e7b7b"
        />


    <LinearLayout
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/round_shp5"
        android:elevation="3dp"

        >




        <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center"
            >


            <RelativeLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/pb_cir_shp"
                >


                <ProgressBar
                    android:id="@+id/percentPb"
                    android:layout_width="82dp"
                    android:layout_height="82dp"
                    style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                    android:progressDrawable="@drawable/pb_cir_shp1"
                    android:progress="0"
                    />

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:gravity="center"
                   >

                   <TextView
                       android:id="@+id/percentViw"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="0%"
                       android:textSize="14sp"
                       android:textStyle="bold"
                       android:textColor="@color/colorPrimary"
                       />

               </LinearLayout>

            </RelativeLayout>



        </LinearLayout>


        <LinearLayout
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#cdcdcd"
            />

        <LinearLayout
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            >


            <TextView
                android:id="@+id/tClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Working Day : 0"
                />

            <TextView
                android:id="@+id/aClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Attend : 0"
                />
            <TextView
                android:id="@+id/pClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Percentage : 0%"
                />

        </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/round_shp5"
        android:elevation="3dp"

        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/top_round_shp2"
            android:orientation="vertical"
            android:gravity="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:text="Attendance Review"
                />

        </LinearLayout>


        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            />






    </LinearLayout>








</LinearLayout>
