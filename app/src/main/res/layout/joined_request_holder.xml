<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    >

    <LinearLayout
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:paddingBottom="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_shp6"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/top_round_shp2"
            >


            <TextView
                android:id="@+id/firstCharOfNam"
                android:layout_marginLeft="7dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="M"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center"
                android:background="@drawable/cir_shp_white2"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                >

                <TextView
                    android:id="@+id/sName"
                    android:layout_marginLeft="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:text="Name : Abdullah Al Mamun"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="marquee"
                    android:textSize="13sp"
                    />


                <TextView
                    android:layout_marginLeft="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:text="Want to connect with your class"
                    android:textStyle="normal"
                    android:maxLines="1"
                    android:ellipsize="marquee"
                    android:textSize="10sp"
                    />




            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:padding="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hi, i want to connect with your class, Please accept my request."
                android:textStyle="normal"
                android:textSize="14sp"
                />


            <LinearLayout
                android:layout_marginTop="7dp"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#5982e1"/>



            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_marginBottom="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                >


                <Button
                    android:id="@+id/cancel"
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="CANCEL"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#dc2d12"
                    android:enabled="true"
                    android:background="@drawable/clk_bk5"
                    />

                <LinearLayout
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_width="1px"
                    android:layout_height="15dp"
                    android:background="#5982e1"
                    />

                <Button
                    android:id="@+id/accept"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="ACCEPT"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#11bf11"
                    android:enabled="true"
                    android:background="@drawable/clk_bk5"
                    />



            </LinearLayout>


        </LinearLayout>




    </LinearLayout>



</LinearLayout>