<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    >



    <RelativeLayout
        android:layout_marginTop="3dp"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_width="match_parent"
        android:layout_height="140dp"

        >


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bk3"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/round_btn1"
        android:scaleType="centerCrop"
        />



    <LinearLayout
        android:id="@+id/bk"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:paddingBottom="2dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"

            >


            <TextView
                android:id="@+id/cidText"
                android:layout_marginLeft="7dp"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:text="CID"
                android:textColor="#7f43e7"
                android:textStyle="bold"
                android:textSize="9sp"
                android:gravity="center"
                android:background="@drawable/cir_shp_white2"
                />

            <TextView
                android:id="@+id/cid"
                android:layout_marginLeft="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="class_id"
                android:textStyle="bold"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="marquee"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="right|center_vertical"
                >

                <Button
                    android:id="@+id/crossBtn"
                    android:layout_marginRight="5dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/cross_btn"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ffffff"/>



        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <TextView
                android:id="@+id/cCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="COURSE CODE"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#ffffff"
                />

            <TextView
                android:id="@+id/cTitle"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:text="COURSE TITLE   "
                android:textStyle="bold"
                android:textSize="13sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="#ffffff"
                />

            <LinearLayout
                android:visibility="gone"
                android:layout_marginTop="7dp"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#ffffff"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/status"
                android:layout_marginTop="1dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Status : request_here"
                android:textStyle="bold"
                android:textSize="11sp"
                android:textColor="#ffffff"
                />


        </LinearLayout>

    </LinearLayout>

    </RelativeLayout>

</LinearLayout>